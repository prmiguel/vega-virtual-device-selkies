#!/bin/bash

function start_simulator {
    echo "Start Simulator"
    kepler device simulator start || true
}

function wait_until_simulator_is_running {
    echo "Wait until Simulator is running"
    while  [ "$(kepler device simulator status | jq -r .running)" != "true" ]; do echo "Simulator is not running"; sleep 2; done
    echo "Simulator is running"
}

function wait_until_simulator_is_connected {
    echo "Wait until Simulator is connected"
    while  [ "$(kepler device is-connected -d Simulator)" != "Device Simulator is connected" ]; do echo "Device Simulator is not connected"; sleep 5; done
    echo "Device Simulator is connected"
}

function close_popup {
    echo "Close popup"
    wmctrl -c "Emulator Running in Nested Virtualization"
}

function install_app {
    if [ -n "$PACKAGE_PATH" ]; then
        echo "Install App"
        kepler device install-app -d Simulator -p $PACKAGE_PATH
    fi
}

function run_app {
    if [ -n "$APP_NAME" ]; then
        echo "Run App"
        kepler device launch-app -d Simulator -a $APP_NAME
    fi
}

function start_automation_toolkit_service {
    echo "Start Automation Toolkit Service"
    kepler device run-cmd -d Simulator --command 'touch /tmp/automation-toolkit.enable'
}

function run_appium_server {
    echo "Run Appium Server"
    nohup appium server --address 0.0.0.0 -p 4723 -g /logs/appium-server.log --allow-cors --log-no-colors --log-timestamp >> /tmp/appium-cli.log 2>&1 &
}

function uninstall_launch_app {
    echo "Uninstall App"
    kepler device uninstall-app -d Simulator -a com.amazon.keplerlauncherapp.main
}

function set_window_position {
    echo "Set Window Position"
    wmctrl -r "Kepler Virtual Device" -e 0,20,20,1700,880
}

kepler --version
start_simulator
close_popup
wait_until_simulator_is_running
wait_until_simulator_is_connected
close_popup
uninstall_launch_app
set_window_position
start_automation_toolkit_service
run_appium_server
install_app
run_app
nohup fastmcp run /vega-virtual-device-mcp/server.py --transport http --host 0.0.0.0 --port 8000 >> /tmp/mcp-server.log 2>&1 &
